# Fish Distribution System Configuration
# GANTI NILAI-NILAI INI SESUAI SETUP ANDA!

# Server Configuration
PORT=5500
NODE_ENV=development

# Database MySQL - WAJIB EDIT!
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=root
DB_NAME=fish_distribution

# JWT Secret - GANTI dengan random string panjang!
JWT_SECRET=fish-distribution-super-secret-key-12345-change-this

# CORS Origins (untuk production nanti)
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# Rate Limiting
MAX_REQUESTS_PER_HOUR=1000

# Email Configuration (Opsional - bisa kosong dulu)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ADMIN_EMAIL=

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info